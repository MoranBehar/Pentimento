<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <TextView
        style="@style/pageTitle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="top"
        android:text="Join our community" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.example.pentimento.FormTextEditComponent
            android:id="@+id/etSignUpName"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            app:customHint="Name"
            app:topLabelText="Name" />

        <com.example.pentimento.FormTextEditComponent
            android:id="@+id/etSignUpEmail"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            app:customHint="Email"
            app:topLabelText="Email" />

        <com.example.pentimento.FormTextEditComponent
            android:id="@+id/etSignUpPhoneNumber"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            app:customHint="Mobile"
            app:topLabelText="Mobile phone" />

        <com.example.pentimento.FormTextEditComponent
            android:id="@+id/etSignUpAge"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            app:customHint="Age"
            app:topLabelText="Age" />

        <com.example.pentimento.FormTextEditComponent
            android:id="@+id/etSignUpPassword"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            app:customHint="Password"
            app:topLabelText="Password" />

