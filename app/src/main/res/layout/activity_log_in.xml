<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LogInActivity">

    <TextView
        style="@style/pageTitle"
        android:layout_gravity="top"
        android:text="Log in to our community" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <com.example.pentimento.FormTextEditComponent
            android:id="@+id/etLogInEmail"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            app:customHint="Enter your email"
            app:topLabelText="Username" />

        <com.example.pentimento.FormTextEditComponent
            android:id="@+id/etLogInPassword"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            app:customHint="Enter your password"
            app:topLabelText="Password" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="40dp">

            <Button
                android:id="@+id/btnLogIn"
                style="@style/normalButton"
                android:layout_marginBottom="10dp"
                android:text="Log In" />

            <Button
                android:id="@+id/btnNeedSignup"
                style="@style/linkButton"
                android:text="Don't have account? sign up here" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>