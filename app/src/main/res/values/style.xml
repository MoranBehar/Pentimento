<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom Dialog Style -->
    <style name="DefaultDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primary_foreground</item>
        <item name="android:textColorPrimary">@color/primary_foreground</item>
        <item name="android:background">@color/secondary_background</item>
        <item name="android:buttonBarButtonStyle">@style/DefaultDialogButtonStyle</item>
        <item name="android:borderlessButtonStyle">@style/DefaultDialogButtonStyle</item>


    </style>

    <style name="DefaultDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primary_foreground</item>
    </style>


    <style name="BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/primary_background</item>
        <item name="itemIconTint">@drawable/elements</item>
        <item name="itemTextColor">@drawable/elements</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationActiveTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationInactiveTextAppearance</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="BottomNavigationActiveTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavigationInactiveTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="itemTextColor">@color/black</item>
    </style>

    <style name="LinearLayoutFormItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayoutFormItem.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/form_label</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:layout_marginTop">-5sp</item>
        <item name="android:layout_marginBottom">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LinearLayoutFormItem.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/form_editText</item>
    </style>

    <style name="normalButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="bottomMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="backgroundTint">@color/btn_bottom_sheet</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="iconMaterialButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">@color/primary_foreground</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="iconGravity">top</item>
        <item name="iconPadding">2dp</item>
        <item name="iconSize">32dp</item>

    </style>

    <style name="linkButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/text_btn_textColor</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:outlineProvider">@null</item>
    </style>

    <style name="pageTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:gravity">top</item>
        <item name="android:textColor">@color/page_title_text</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/haeder_page_title</item>
    </style>

    <!-- Tool Bar-->
    <style name="ToolBarStyle">
        <item name="colorControlNormal">@color/primary_foreground</item>
        <item name="homeAsUpIndicator">@drawable/ic_drawer_menu</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer_menu</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/primary_foreground</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="ToolbarThemeOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorOnPrimary">@color/primary_foreground</item>  <!-- icon color -->
        <item name="android:textColorSecondary">@color/primary_foreground</item>
    </style>


</resources>